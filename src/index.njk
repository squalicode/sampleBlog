---
title: Home
layout: main.njk
eleventyExcludeFromCollections: true
pagination:
  data: collections.all
  size: 5
  reverse: true
  alias: posts
---

{% include "post-count.html" %}

{% for article in posts %}
  <article class="post-wrapper">
    <header>
      <h1>
        <a href="{{ article.url | url }}">
          {{ article.data.title }}
          <svg aria-hidden="true" viewBox="0 0 512 512">
            <title>Permalink</title>
            <path d="M200.66,352H144a96,96,0,0,1,0-192h55.41" style="fill:none;stroke-linecap:round;stroke-linejoin:round;"/>
            <path d="M312.59,160H368a96,96,0,0,1,0,192H311.34" style="fill:none;stroke-linecap:round;stroke-linejoin:round;"/>
            <line x1="169.07" y1="256" x2="344.93" y2="256" style="fill:none;stroke-linecap:round;stroke-linejoin:round;"/>
          </svg>
        </a>
      </h1>
    </header>
    {% from 'post.njk' import post %}
    {{ post(article.data.title, article.templateContent, article.data.date, article.url | url) }}
  </article>
{% endfor %}

<nav class="nav-pagination" aria-labelledby="pagination">
  <h3 id="pagination">Post pages</h3>
  <ul class="no-style">
    <li>{% if page.url != pagination.href.first %}<a href="{{ pagination.href.first }}"><svg aria-hidden="true" viewBox="0 0 10 10"><line x1="2" y1="2" x2="2" y2="8" /><polyline style="fill:none" points="8 2, 4 5, 8 8" /></svg>Newest</a>{% else %}<div><svg aria-hidden="true" viewBox="0 0 10 10"><line x1="2" y1="2" x2="2" y2="8" /><polyline style="fill:none" points="8 2, 4 5, 8 8" /></svg>Newest</div>{% endif %}</li>
    <li>{% if pagination.href.previous %}<a href="{{ pagination.href.previous }}"><svg aria-hidden="true" viewBox="0 0 10 10"><polyline style="fill:none" points="7 2, 3 5, 7 8" /></svg>Newer</a>{% else %}<div><svg aria-hidden="true" viewBox="0 0 10 10"><polyline style="fill:none" points="7 2, 3 5, 7 8" /></svg>Newer</div>{% endif %}</li>
    <li class="li-archive">
      <a href="{{ "/archive" | url }}">
      <svg aria-hidden="true" viewBox="0 0 512 512"><path d="M464,352H320a16,16,0,0,0-16,16,48,48,0,0,1-96,0,16,16,0,0,0-16-16H48a16,16,0,0,0-16,16v64a64.07,64.07,0,0,0,64,64H416a64.07,64.07,0,0,0,64-64V368A16,16,0,0,0,464,352Z"/><path d="M479.46,187.88,447.61,68.45C441.27,35.59,417.54,16,384,16H128c-16.8,0-31,4.69-42.1,13.94S67.66,52,64.4,68.4L32.54,187.88A15.9,15.9,0,0,0,32,192v48c0,35.29,28.71,80,64,80H416c35.29,0,64-44.71,64-80V192A15.9,15.9,0,0,0,479.46,187.88ZM440.57,176H320a15.92,15.92,0,0,0-16,15.82,48,48,0,1,1-96,0A15.92,15.92,0,0,0,192,176H71.43a2,2,0,0,1-1.93-2.52L95.71,75C99.26,56.59,109.52,48,128,48H384c18.59,0,28.84,8.53,32.25,26.85l26.25,98.63A2,2,0,0,1,440.57,176Z"/></svg>
      Archive
      </a>
    </li>
    <li>{% if pagination.href.next %}<a href="{{ pagination.href.next }}"><svg aria-hidden="true" viewBox="0 0 10 10"><polyline style="fill:none" points="3 2, 7 5, 3 8" /></svg>Older</a>{% else %}<div><svg aria-hidden="true" viewBox="0 0 10 10"><polyline style="fill:none" points="3 2, 7 5, 3 8" /></svg>Older</div>{% endif %}</li>
    <li>{% if page.url != pagination.href.last %}<a href="{{ pagination.href.last }}"><svg aria-hidden="true" viewBox="0 0 10 10"><line x1="8" y1="2" x2="8" y2="8" /><polyline style="fill:none" points="2 2, 6 5, 2 8" /></svg>Oldest</a>{% else %}<div><svg aria-hidden="true" viewBox="0 0 10 10"><line x1="8" y1="2" x2="8" y2="8" /><polyline style="fill:none" points="2 2, 6 5, 2 8" /></svg>Oldest</div>{% endif %}</li>
  </ul>
</nav>